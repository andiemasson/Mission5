@{
    ViewData["Title"] = "Pricing Details";
}
<div class="text-center">
    <br/><br/>
    <h2 class="display-4">Tutoring Cost Calculator</h2>
    <br/>
</div>

<div class="calculator-box p-4">
    <label for="hours">Enter the amount of weekly hours:</label>
    <input type="number" id="hours" class="form-control" min="1" placeholder="Hours" required />

    <label class="mt-3">Hourly Rate:</label>
    <input type="text" id="rate" class="form-control" value="25" readonly />
    <br/>
    <button class="btn btn-secondary" id="calculate">Calculate Total</button>
    <br/>
    <label class="mt-3">Total Cost per Week:</label>
    <input type="text" id="totalCost" class="form-control" readonly />
</div>


@section Scripts {
    <script src="~/js/site.js"></script>
}

<style>
    .calculator-box {
        max-width: 400px;
        margin: auto;
        background: #f8f9fa;
        border-radius: 8px;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
    }
</style>


